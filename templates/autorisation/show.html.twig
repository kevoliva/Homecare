{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes autorisations
{% endblock %}

{% block contenu %}
<center>
  <h2>
    Autorisations pour l'entreprise {{ autorisation.professionnel.getNomEntrep }}
  </h2>
  <p>
    {{ autorisation.bien.getAdresse }}
    {{ autorisation.bien.getCodePostal }}
    {{ autorisation.bien.getVille }}
  </p>
</center>
<hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Plan</th>
                <td>{{ autorisation.plan ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Facture</th>
                <td>{{ autorisation.facture ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Intervention</th>
                <td>{{ autorisation.intervention ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Alerte</th>
                <td>{{ autorisation.alerte ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
    <br>

    <a href="{{ path('autorisation_index', {idBien:bien.id}) }}">
      <button class="btn btn-info btn-sm">Retour</button>
    </a>

    <a href="{{ path('autorisation_edit', {'id': autorisation.id, idBien:bien.id}) }}" style="float:right">
    <button class="btn btn-info btn-sm">Modifier</button>
    </a>

    <center>
    {{ include('autorisation/_delete_form.html.twig') }}
    </center>
{% endblock %}
