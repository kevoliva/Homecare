{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes autorisations
{% endblock %}

{% block contenu %}
<center>
  <h2>
    Autorisations pour l'entreprise {{ autorisation.professionnel.getNomEntrep }}
  </h2>
  <p>
    {{ autorisation.bien.getAdresse }}
    {{ autorisation.bien.getCodePostal }}
    {{ autorisation.bien.getVille }}
  </p>
</center>
<hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ autorisation.id }}</td>
            </tr>
            <tr>
                <th>Plan</th>
                <td>{{ autorisation.plan ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Facture</th>
                <td>{{ autorisation.facture ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Intervention</th>
                <td>{{ autorisation.intervention ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Alerte</th>
                <td>{{ autorisation.alerte ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('autorisation_index', {idBien:bien.id}) }}">back to list</a>

    <a href="{{ path('autorisation_edit', {'id': autorisation.id, idBien:bien.id}) }}">edit</a>

    {{ include('autorisation/_delete_form.html.twig') }}
{% endblock %}
