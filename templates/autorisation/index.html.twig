{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes autorisations
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Mes autorisations
      </h2>
      <p>33 Rue de la Paix - 64600 Anglet</p>
    </center>
    <hr>

  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <center>
      <button type="button" class="btn btn-info btn-sm" style="margin-top: 7px">Filtrer</button>
    </center>
  </div>

  <div class="col-md-8">
    <center>
      <input class="au-input au-input--xl" type="text" name="search" placeholder="Rechercher..." />
    </center>
  </div>

  <div class="col-md-2">
    <button type="button" class="btn btn-info btn-sm" style="margin-top: 7px">Trier</button>
  </div>
</div>
</br>
<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Nom d'entreprise</th>
          <th scope="col">Autorisations</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for autorisationCourante in autorisations %}
        <tr>
          <td>{{ autorisationCourante.professionnel.getNomEntrep }}</td>
          <td>
            {% if autorisationCourante.plan %}
            Plans
            {% endif %}
            {% if autorisationCourante.facture %}
            Factures
            {% endif %}
            {% if autorisationCourante.intervention %}
            Interventions
            {% endif %}
            {% if autorisationCourante.alerte %}
            Alertes
            {% endif %}
          </td>
          <td>
            <a href="{{path('autorisation_show', {id:autorisationCourante.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </br>

  <a href="{{ path('autorisation_new', {idBien:bien.id}) }}" style="float:right;">
    <i class="demo-icon icon-plus-circled" style="font-size:35px; color:#138496"></i>
  </a>

</div>
</div>
{% endblock %}
