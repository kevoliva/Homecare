<!DOCTYPE html>

<title>Autorisation index</title>

{% block body %}
    <h1>Autorisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Plan</th>
                <th>Facture</th>
                <th>Intervention</th>
                <th>Alerte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for autorisation in autorisations %}
            <tr>
                <td>{{ autorisation.id }}</td>
                <td>{{ autorisation.plan ? 'Yes' : 'No' }}</td>
                <td>{{ autorisation.facture ? 'Yes' : 'No' }}</td>
                <td>{{ autorisation.intervention ? 'Yes' : 'No' }}</td>
                <td>{{ autorisation.alerte ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('autorisation_show', {'id': autorisation.id}) }}">show</a>
                    <a href="{{ path('autorisation_edit', {'id': autorisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('autorisation_new') }}">Create new</a>
{% endblock %}
