{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes autorisations
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Mes autorisations
      </h2>
      <p>
        {{ bien.adresse }}
        {{ bien.codePostal }}
        {{ bien.ville }}
      </p>
    </center>
    <hr>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <center>
      <div class="dropdown show">
        <a class="btn btn-outline-secondary btn-sm" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="{{path('autorisation_index', {idBien:bien.id})}}">Alphabétique</a>
          <a class="dropdown-item" href="{{path('autorisation_index_desalpha', {idBien:bien.id})}}">Désalphabétique</a>
        </div>
      </div>
    </center>
  </div>
</div>

</br>
<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Nom d'entreprise</th>
          <th scope="col">Autorisations</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for autorisationCourante in autorisations %}
        <tr>
          <td>{{ autorisationCourante.professionnel.getNomEntrep }}</td>
          <td>
            {% if autorisationCourante.plan %}
            <i><img src="{{asset('images/icon/plan.ico')}}"/></i>
            {% endif %}
            {% if autorisationCourante.facture %}
            <i><img src="{{asset('images/icon/facture.ico')}}"/></i>
            {% endif %}
            {% if autorisationCourante.intervention %}
            <i><img src="{{asset('images/icon/intervention.ico')}}"/></i>
            {% endif %}
            {% if autorisationCourante.alerte %}
            <i><img src="{{asset('images/icon/alerte.ico')}}"/></i>
            {% endif %}
          </td>
          <td>
            <a href="{{path('autorisation_show', {id:autorisationCourante.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </br>

  <a href="{{ path('autorisation_new', {idBien:bien.id}) }}" style="float:right;">
    <i class="demo-icon icon-plus-circled" style="font-size:35px; color:#138496"></i>
  </a>

</div>
</div>
{% endblock %}
