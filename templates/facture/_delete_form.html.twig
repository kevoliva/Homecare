<form method="post" action="{{ path('facture_delete', {'id': facture.id, idBien:bien.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette facture ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facture.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
