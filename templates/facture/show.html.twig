{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes factures
{% endblock %}

{% block contenu %}
<center>
  <h2>
    {{ facture.libelle }}
  </h2>
  {{ facture.laDate ? facture.laDate|date('d-m-Y') : '' }}
  <p>
    {{ facture.bien.getAdresse }}
    {{ facture.bien.getCodePostal }}
    {{ facture.bien.getVille }}
  </p>
</center>
<hr>
<center>
  <a href="{{ asset('uploads/factures/' ~ facture.cheminFic) }}" style="color:#C6CCCD" target="_blank">Ouvrir la facture</a>
</center>
<br>
<embed src="{{ asset('uploads/factures/' ~ facture.cheminFic) }}" width=100% height=1000px type='application/pdf'/>

<br>

<a href="{{ path('facture_index', {idBien:bien.id}) }}">
  <button class="btn btn-info btn-sm">Retour</button>
</a>

<a href="{{ path('facture_edit', {'id': facture.id, idBien:bien.id}) }}" style="float:right">
  <button class="btn btn-info btn-sm">Modifier</button>
</a>

<center>
{{ include('facture/_delete_form.html.twig') }}
</center>
{% endblock %}
