{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes factures
{% endblock %}

{% block contenu %}
<div class="row">
  <div class="col-md-12">
    <center>
      <h2>
        Ajouter une nouvelle facture
      </h2>
      <p>
        {{ bien.adresse }}
        {{ bien.codePostal }}
        {{ bien.ville }}
      </p>
    </center>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">

    {{ include('facture/_form.html.twig') }}

    <br>
    <center>
      <a href="{{ path('facture_index', {idBien:bien.id}) }}">
        <button class="btn btn-danger btn-sm">Annuler</button>
      </a>
    </center>

  </div>
  <div class="col-md-3">
  </div>
</div>
{% endblock %}
