{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes factures
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Mes factures
      </h2>
      <p>
        {{ bien.adresse }}
        {{ bien.codePostal }}
        {{ bien.ville }}
      </p>
    </center>
    <hr>

  </div>
</div>
<div class="row">
  <div class="col-md-2">
    <center>
      <button type="button" class="btn btn-info btn-sm" style="margin-top: 7px">Filtrer</button>
    </center>
  </div>

  <div class="col-md-8">
    <center>
      <input class="au-input au-input--xl" type="text" name="search" placeholder="Rechercher..." />
    </center>
  </div>

  <div class="col-md-2">
    <button type="button" class="btn btn-info btn-sm" style="margin-top: 7px">Trier</button>
  </div>
</div>
</br>
<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Libell√©</th>
          <th scope="col">Date de la facture</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for factureCourante in factures %}
        <tr>
          <td>{{ factureCourante.libelle }}</td>
          <td>{{ factureCourante.laDate|date('d/m/Y') }}</td>
          <td>
            <a href="{{path('facture_show', {id:factureCourante.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </br>

  <a href="{{ path('facture_new', {idBien:bien.id}) }}" style="float:right;">
    <i class="demo-icon icon-plus-circled" style="font-size:35px; color:#138496"></i>
  </a>

</div>
</div>
{% endblock %}
