{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes alertes
{% endblock %}

{% block contenu %}
<div class="row">
  <div class="col-md-12">
    <center>
      <h2>
        Ajouter une nouvelle alerte
      </h2>
      <p>
        {{ bien.adresse }}
        {{ bien.codePostal }}
        {{ bien.ville }}
      </p>
    </center>
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">

    {{ include('alerte/_form.html.twig') }}

    <br>
    <center>
      <a href="{{ path('alerte_index', {idBien:bien.id}) }}">
        <button class="btn btn-danger btn-sm">Annuler</button>
      </a>
    </center>

  </div>
  <div class="col-md-3">
  </div>
</div>

{% endblock %}
