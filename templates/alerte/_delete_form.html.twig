<form method="post" action="{{ path('alerte_delete', {'id': alerte.id, idBien:bien.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette alerte ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alerte.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
