{% extends 'professionnel_base.html.twig' %}

{% block title %}
Alertes
{% endblock %}

{% block contenu %}
<h1>Alerte</h1>

<table class="table">
  <tbody>
    <tr>
      <th>Libelle</th>
      <td>{{ alerte.libelle }}</td>
    </tr>
    <tr>
      <th>Date</th>
      <td>{{ alerte.laDate ? alerte.laDate|date('Y-m-d') : '' }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ alerte.description }}</td>
    </tr>
  </tbody>
</table>

{% endblock %}
