{% extends 'professionnel_base.html.twig' %}

{% block title %}
Factures
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Factures
      </h2>
      <p>{{ bien.proprietaire.getPrenom }} {{ bien.proprietaire.getNom }}</p>
      <p>{{ bien.adresse }} - {{ bien.codePostal }} {{ bien.ville }}</p>
    </center>
    <hr>

  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <center>
      <div class="dropdown show">
        <a class="btn btn-outline-secondary btn-sm" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="{{path('pro_facture_index_recent', {idBien:bien.id})}}">La plus récente</a>
          <a class="dropdown-item" href="{{path('pro_facture_index_ancien', {idBien:bien.id})}}">La plus ancienne</a>
          <a class="dropdown-item" href="{{path('pro_facture_index', {idBien:bien.id})}}">Alphabétique</a>
          <a class="dropdown-item" href="{{path('pro_facture_index_desalpha', {idBien:bien.id})}}">Désalphabétique</a>
        </div>
      </div>
    </center>
  </div>
</div>
</br>
<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Libellé</th>
          <th scope="col">Date de la facture</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for factureCourante in factures %}
        <tr>
          <td>{{ factureCourante.libelle }}</td>
          <td>{{ factureCourante.laDate|date('d/m/Y') }}</td>
          <td>
            <a href="{{path('pro_facture_show', {id:factureCourante.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
    </table>

</div>
</div>
{% endblock %}
