{% extends 'professionnel_base.html.twig' %}

{% block title %}
Interventions
{% endblock %}

{% block contenu %}
<div class="row">
  <div class="col-md-12">
    <center>

      <h2>Ajouter une nouvelle intervention</h2>
      <p>{{ bien.proprietaire.getPrenom }} {{ bien.proprietaire.getNom }} </p>
      <p>{{ bien.adresse }} - {{ bien.codePostal }} {{ bien.ville }}</p>
      <hr>

    </center>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">

    {{ include('professionnel/intervention/_form.html.twig') }}

    <br>
    <center>
      <a href="{{ path('pro_intervention_index', { idBien:bien.id }) }}">
        <button class="btn btn-danger btn-sm">Annuler</button>
      </a>
    </center>

  </div>
  <div class="col-md-3">
  </div>
</div>

{% endblock %}
