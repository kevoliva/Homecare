<!DOCTYPE html>
<link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
<link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">

<title>Liste des biens</title>

{% block body %}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <center>
        <h1 class="display-4">Liste des biens autorisés pour l'entreprise <br>
          <b>{{ app.user.nomEntrep }}</b></h1>
          <br>
          <hr>
        </center>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">

        <table class="table">
          <thead>
            <tr>
              <th>Adresse</th>
              <th>Ville</th>
              <th>CodePostal</th>
              <th><i class="demo-icon icon-eye" style="color:#000000"></i></th>
            </tr>
          </thead>
          <tbody>
            {% for bien in biens %}
            <tr>

              <td>{{ bien.adresse }}</td>
              <td>{{ bien.ville }}</td>
              <td>{{ bien.codePostal }}</td>

              <td>
                <a href="{{ path('homecare_pro', {'idBien': bien.id}) }}"><i class="demo-icon icon-eye" style="color:#999999"></i></a>
              </td>
            </tr>
            {% else %}
            <tr>
              <td colspan="7">Aucun bien ne vous est encore autorisé...</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>

      </div>

      <div class="col-md-2">

      </div>
    </div>
  </div>

{% endblock %}
