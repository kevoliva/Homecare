{% extends 'professionnel_base.html.twig' %}

{% block title %}
Plans
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Plans
      </h2>
      <p>{{ bien.proprietaire.getPrenom }} {{ bien.proprietaire.getNom }}</p>
      <p>{{ bien.adresse }} - {{ bien.codePostal }} {{ bien.ville }}</p>
    </center>
    <hr>

  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <center>
      <div class="dropdown show">
        <a class="btn btn-outline-secondary btn-sm" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="{{path('pro_plan_index_recent', {idBien:bien.id})}}">Le plus récent</a>
          <a class="dropdown-item" href="{{path('pro_plan_index_ancien', {idBien:bien.id})}}">Le plus ancien</a>
          <a class="dropdown-item" href="{{path('pro_plan_index', {idBien:bien.id})}}">A-z</a>
          <a class="dropdown-item" href="{{path('pro_plan_index_desalpha', {idBien:bien.id})}}">Z-a</a>
        </div>
      </div>
    </center>
  </div>
</div>
</br>
<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Libellé</th>
          <th scope="col">Date du plan</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for planCourant in plans %}
        <tr>
          <td>{{ planCourant.libelle }}</td>
          <td>{{ planCourant.laDate|date('d/m/Y') }}</td>
          <td>
            <a href="{{path('pro_plan_show', {id:planCourant.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

</div>
</div>

{% endblock %}
