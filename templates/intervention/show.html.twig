{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes interventions
{% endblock %}

{% block contenu %}
<center>
  <h2>
    {{ intervention.libelle }}
  </h2>
  <p>
    {{ intervention.bien.getAdresse }}
    {{ intervention.bien.getCodePostal }}
    {{ intervention.bien.getVille }}
  </p>
</center>
<hr>

    <table class="table">
        <tbody>

            {% if intervention.typeInterv != 'Autre...' %}
            <tr>
                <th>Type d'intervention</th>
                <td>{{ intervention.typeInterv }}</td>
            </tr>
          {% endif %}
            <tr>
                <th>Observations</th>
                <td>{{ intervention.observation }}</td>
            </tr>
            <tr>
                <th>Remarques</th>
                <td>{{ intervention.remarque }}</td>
            </tr>
        </tbody>
    </table>
    <br>

    <a href="{{ path('intervention_index', {idBien:bien.id}) }}">
      <button class="btn btn-info btn-sm">Retour</button>
    </a>

    <a href="{{ path('intervention_edit', {'id': intervention.id, idBien:bien.id}) }}" style="float:right">
    <button class="btn btn-info btn-sm">Modifier</button>
    </a>

    <center>
    {{ include('intervention/_delete_form.html.twig') }}
    </center>
{% endblock %}
