<form method="post" action="{{ path('intervention_delete', {'id': intervention.id, idBien:bien.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette intervention ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ intervention.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
