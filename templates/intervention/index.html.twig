{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes interventions
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Mes interventions
      </h2>
      <p>
        {{ bien.adresse }}
        {{ bien.codePostal }}
        {{ bien.ville }}
      </p>
    </center>
    <hr>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <center>
      <div class="dropdown show">
        <a class="btn btn-outline-secondary btn-sm" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="{{path('intervention_index_recent', {idBien:bien.id})}}">La plus récente</a>
          <a class="dropdown-item" href="{{path('intervention_index_ancien', {idBien:bien.id})}}">La plus ancienne</a>
          <a class="dropdown-item" href="{{path('intervention_index', {idBien:bien.id})}}">Alphabétique</a>
          <a class="dropdown-item" href="{{path('intervention_index_desalpha', {idBien:bien.id})}}">Désalphabétique</a>
        </div>
      </div>
    </center>
  </div>
</div>

</br>
<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Libellé</th>
          <th scope="col">Date de l'intervention</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for interventionCourante in interventions %}
        <tr>
          <td>{{ interventionCourante.libelle }}</td>
          <td>{{ interventionCourante.laDate|date('d/m/Y') }}</td>
          <td>
            <a href="{{path('intervention_show', {id:interventionCourante.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </br>

  <a href="{{ path('intervention_new', {idBien:bien.id}) }}" style="float:right;">
    <i class="demo-icon icon-plus-circled" style="font-size:35px; color:#138496"></i>
  </a>

</div>
</div>
{% endblock %}
