{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes plans
{% endblock %}

{% block contenu %}

<div class="row">
  <div class="col-md-12">

    <center>
      <h2>
        Mes plans
      </h2>
      <p>
        {{ bien.adresse }}
        {{ bien.codePostal }}
        {{ bien.ville }}
      </p>
    </center>
    <hr>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <center>
      <div class="dropdown show">
        <a class="btn btn-outline-info btn-sm" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Trier
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="#">Le plus récent</a>
          <a class="dropdown-item" href="#">Le plus ancien</a>
          <a class="dropdown-item" href="{{path('plan_index', {idBien:bien.id})}}">A-z</a>
          <a class="dropdown-item" href="{{path('plan_index_desalpha', {idBien:bien.id})}}">Z-a</a>
        </div>
      </div>
    </center>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-12">

    <!-- TABLEAU -->

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Libellé</th>
          <th scope="col">Date du plan</th>
          <th scope="col"><i class="demo-icon icon-eye" style="color:#000000"></i></th>
        </tr>
      </thead>
      <tbody>
        {% for planCourant in plans %}
        <tr>
          <td>{{ planCourant.libelle }}</td>
          <td>{{ planCourant.laDate|date('d/m/Y') }}</td>
          <td>
            <a href="{{path('plan_show', {id:planCourant.id, idBien:bien.id})}}">
              <i class="demo-icon icon-eye" style="color:#999999"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </br>

  <a href="{{ path('plan_new', {idBien:bien.id}) }}" style="float:right;">
    <i class="demo-icon icon-plus-circled" style="font-size:35px; color:#138496"></i>
  </a>

</div>
</div>

{% endblock %}
