{% extends 'proprietaire_base.html.twig' %}

{% block title %}
Mes plans
{% endblock %}

{% block contenu %}
<center>
  <h2>
    {{ plan.libelle }}
  </h2>
  {{ plan.laDate ? plan.laDate|date('d-m-Y') : '' }}
  <p>
    {{ plan.bien.getAdresse }}
    {{ plan.bien.getCodePostal }}
    {{ plan.bien.getVille }}
  </p>
</center>
<hr>
<center>
  <a href="{{ asset('uploads/plans/' ~ plan.cheminFic) }}" style="color:#C6CCCD" target="_blank">Ouvrir le plan</a>
</center>
<br>
<embed src="{{ asset('uploads/plans/' ~ plan.cheminFic) }}" width=100% height=1000px type='application/pdf'/>

<br>

<a href="{{ path('plan_index', {idBien:bien.id}) }}">
  <button class="btn btn-info btn-sm">Retour</button>
</a>

<a href="{{ path('plan_edit', {'id': plan.id, idBien:bien.id}) }}" style="float:right">
  <button class="btn btn-info btn-sm">Modifier</button>
</a>

<center>
{{ include('plan/_delete_form.html.twig') }}
</center>
{% endblock %}
